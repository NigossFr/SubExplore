<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SubExplore.Views.Auth.ResetPasswordConfirmationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Réinitialisation du mot de passe">
    <VerticalStackLayout
        Padding="20"
        Spacing="20"
        VerticalOptions="Center">
        <Image
            HeightRequest="100"
            HorizontalOptions="Center"
            Source="check_circle.png" />
        <Label
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Mot de passe réinitialisé !"
            TextColor="#006994" />
        <Label
            FontSize="16"
            HorizontalOptions="Center"
            Text="Votre mot de passe a été réinitialisé avec succès. Vous pouvez maintenant vous connecter avec votre nouveau mot de passe."
            TextColor="#666" />
        <Button
            Margin="0,20"
            BackgroundColor="#006994"
            Command="{Binding NavigateToLoginCommand}"
            CornerRadius="25"
            HeightRequest="50"
            Text="Se connecter"
            TextColor="White" />
    </VerticalStackLayout>
</ContentPage>

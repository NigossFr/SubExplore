<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SubExplore.ViewModels"
             x:Class="SubExplore.Views.Auth.ForgotPasswordPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Background}">

    <ContentPage.Resources>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TextColor" Value="{StaticResource Primary}"/>
            <Setter Property="PlaceholderColor" Value="{StaticResource Gray400}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*"
          Padding="20"
          RowSpacing="20">

        <!-- En-tête -->
        <VerticalStackLayout Grid.Row="0" 
                            Spacing="10" 
                            Margin="0,40,0,20">
            <Image Source="logo.png"
                   HeightRequest="80"
                   HorizontalOptions="Center"/>
            <Label Text="Mot de passe oublié ?"
                   TextColor="{StaticResource Primary}"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="Vous recevrez un email pour réinitialiser votre mot de passe"
                   TextColor="{StaticResource Gray600}"
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <!-- Formulaire -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               Margin="0"
               Padding="20"
               CornerRadius="15"
               HasShadow="True"
               VerticalOptions="Start">

            <VerticalStackLayout Spacing="15">
                <!-- Messages -->
                <Label Text="{Binding ErrorMessage}"
                       IsVisible="{Binding HasError}"
                       TextColor="{StaticResource Error}"
                       FontSize="14"/>

                <Label Text="{Binding SuccessMessage}"
                       IsVisible="{Binding IsResetEmailSent}"
                       TextColor="{StaticResource Success}"
                       FontSize="14"/>

                <!-- Email -->
                <Entry Style="{StaticResource EntryStyle}"
                       Text="{Binding ForgotPasswordModel.Email}"
                       Placeholder="Email"
                       Keyboard="Email"
                       ReturnType="Done"
                       ReturnCommand="{Binding RequestPasswordResetCommand}"/>

                <!-- Bouton d'envoi -->
                <Button Text="{Binding SubmitButtonText}"
                        Style="{StaticResource ButtonStyle}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        Command="{Binding RequestPasswordResetCommand}"
                        IsEnabled="{Binding IsNotLoading}"/>

                <!-- Retour à la connexion -->
                <Button Text="Retour à la connexion"
                        Style="{StaticResource ButtonStyle}"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="White"
                        Command="{Binding NavigateToLoginCommand}"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
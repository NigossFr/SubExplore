<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SubExplore.Views.Auth.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SubExplore.Converters"
    xmlns:viewmodels="clr-namespace:SubExplore.ViewModels.Auth"
    x:DataType="viewmodels:ForgotPasswordViewModel"
    BackgroundColor="{StaticResource Background}"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:LoadingToActivityIndicatorConverter x:Key="LoadingToActivityIndicatorConverter" />

            <Style x:Key="EntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="{StaticResource Primary}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource Gray400}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="0,10" />
            </Style>

            <Style x:Key="ValidationMessageStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#F44336" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Margin" Value="5,2,0,0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!--  Header with back button  -->
        <Grid
            BackgroundColor="{StaticResource Primary}"
            HeightRequest="60"
            VerticalOptions="Start">
            <Grid Padding="10,0" ColumnDefinitions="Auto,*">
                <ImageButton
                    Grid.Column="0"
                    BackgroundColor="Transparent"
                    Command="{Binding NavigateToLoginCommand}"
                    HeightRequest="30"
                    Source="arrow_back.png"
                    VerticalOptions="Center"
                    WidthRequest="30" />
                <Label
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Mot de passe oublié"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
        </Grid>

        <ScrollView Margin="0,60,0,0">
            <Grid
                Padding="20"
                RowDefinitions="Auto,*"
                RowSpacing="15">
                <!--  Title & Description  -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <Image
                        Margin="0,20"
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        Source="forgot_password.png" />
                </VerticalStackLayout>

                <!--  Form Content  -->
                <Frame
                    Grid.Row="1"
                    Padding="20"
                    BackgroundColor="White"
                    CornerRadius="15"
                    HasShadow="True">

                    <!--  Email Not Sent View  -->
                    <VerticalStackLayout IsVisible="{Binding IsEmailSent, Converter={StaticResource InvertedBoolConverter}}" Spacing="15">
                        <Label
                            FontAttributes="Bold"
                            FontSize="22"
                            HorizontalTextAlignment="Center"
                            Text="Réinitialisation du mot de passe"
                            TextColor="{StaticResource Primary}" />

                        <Label
                            Margin="0,0,0,10"
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            Text="Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe."
                            TextColor="{StaticResource TextSecondary}" />

                        <!--  Error message  -->
                        <Frame
                            Padding="10"
                            BackgroundColor="#FFEBEE"
                            BorderColor="#F44336"
                            CornerRadius="5"
                            HasShadow="False"
                            IsVisible="{Binding HasError}">
                            <Label
                                FontSize="14"
                                Text="{Binding ErrorMessage}"
                                TextColor="#F44336" />
                        </Frame>

                        <!--  Email  -->
                        <VerticalStackLayout Spacing="3">
                            <Label
                                FontSize="14"
                                Text="Email"
                                TextColor="{StaticResource TextSecondary}" />
                            <Border
                                Stroke="{StaticResource Accent}"
                                StrokeShape="RoundRectangle 8,8,8,8"
                                StrokeThickness="1">
                                <Entry
                                    Keyboard="Email"
                                    Placeholder="votre@email.com"
                                    Style="{StaticResource EntryStyle}"
                                    Text="{Binding ForgotPasswordModel.Email}">
                                    <Entry.Behaviors>
                                        <EventToCommandBehavior Command="{Binding CheckEmailExistsCommand}" EventName="Unfocused" />
                                    </Entry.Behaviors>
                                </Entry>
                            </Border>
                            <Label
                                IsVisible="{Binding HasEmailError}"
                                Style="{StaticResource ValidationMessageStyle}"
                                Text="{Binding EmailValidationMessage}" />
                        </VerticalStackLayout>

                        <!--  Send Reset Link Button  -->
                        <Grid Margin="0,10">
                            <Button
                                BackgroundColor="{StaticResource Primary}"
                                Command="{Binding SendResetLinkCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                                Style="{StaticResource ButtonStyle}"
                                Text="{Binding SubmitButtonText}"
                                TextColor="White" />
                            <ActivityIndicator
                                HorizontalOptions="Center"
                                IsRunning="{Binding IsBusy}"
                                IsVisible="{Binding IsBusy}"
                                VerticalOptions="Center"
                                Color="White" />
                        </Grid>

                        <!--  Back to Login  -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label
                                Text="Vous vous souvenez de votre mot de passe ?"
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center" />
                            <Label
                                FontAttributes="Bold"
                                Text="Se connecter"
                                TextColor="{StaticResource Primary}"
                                TextDecorations="Underline"
                                VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!--  Email Sent Confirmation View  -->
                    <VerticalStackLayout IsVisible="{Binding IsEmailSent}" Spacing="15">
                        <Image
                            Margin="0,10"
                            HeightRequest="100"
                            HorizontalOptions="Center"
                            Source="email_sent.png" />

                        <Label
                            FontAttributes="Bold"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text="Email envoyé !"
                            TextColor="{StaticResource Primary}" />

                        <Label
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            Text="{Binding SuccessMessage}"
                            TextColor="{StaticResource TextSecondary}" />

                        <Frame
                            Padding="10"
                            BackgroundColor="#E8F5E9"
                            BorderColor="#43A047"
                            CornerRadius="5"
                            HasShadow="False">
                            <VerticalStackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    Text="Conseil"
                                    TextColor="#43A047" />
                                <Label Text="Si vous ne trouvez pas l'email dans votre boîte de réception, vérifiez votre dossier de spam." TextColor="#43A047" />
                            </VerticalStackLayout>
                        </Frame>

                        <Button
                            Margin="0,20"
                            BackgroundColor="{StaticResource Primary}"
                            Command="{Binding NavigateToLoginCommand}"
                            Style="{StaticResource ButtonStyle}"
                            Text="Retour à la connexion"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
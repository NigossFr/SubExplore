<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SubExplore.Views.Main.StructureDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Structure">
    <VerticalStackLayout
        Padding="20"
        Spacing="20"
        VerticalOptions="Center">
        <Label
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Structure"
            TextColor="#006994" />
        <Label
            FontSize="16"
            HorizontalOptions="Center"
            Text="Détails de la structure en cours de développement"
            TextColor="#666" />
        <Button
            Margin="0,20"
            BackgroundColor="#006994"
            Command="{Binding GoBackCommand}"
            CornerRadius="25"
            HeightRequest="50"
            Text="Retour"
            TextColor="White" />
    </VerticalStackLayout>
</ContentPage>
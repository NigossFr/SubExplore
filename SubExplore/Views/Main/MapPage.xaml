<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SubExplore.Views.Main.MapPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps">

    <Grid>
        <!--  Map  -->
        <maps:Map
            x:Name="map"
            IsShowingUser="{Binding IsLocationAvailable}"
            IsTrafficEnabled="False" />

        <!--  Header  -->
        <Grid
            BackgroundColor="#006994"
            HeightRequest="60"
            VerticalOptions="Start">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Margin="16,0"
                FontAttributes="Bold"
                FontSize="20"
                Text="SubExplore"
                TextColor="White" />

            <HorizontalStackLayout
                Grid.Column="1"
                Margin="16,0"
                Spacing="8">
                <ImageButton
                    BackgroundColor="Transparent"
                    Command="{Binding CenterOnLocationCommand}"
                    Source="location.png" />
                <ImageButton
                    BackgroundColor="Transparent"
                    Command="{Binding ToggleFilterPanelCommand}"
                    Source="filter.png" />
            </HorizontalStackLayout>
        </Grid>

        <!--  Offline Mode Banner  -->
        <Label
            Margin="0,60,0,0"
            Padding="8"
            BackgroundColor="#FF9F1C"
            HorizontalTextAlignment="Center"
            IsVisible="{Binding IsOfflineMode}"
            Text="Mode hors-ligne"
            TextColor="White"
            VerticalOptions="Start" />

        <!--  Filters Panel  -->
        <Grid
            x:Name="filtersPanel"
            BackgroundColor="White"
            IsVisible="{Binding IsFilterPanelVisible}"
            TranslationY="0"
            VerticalOptions="End">
            <StackLayout Padding="16">
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Filtres" />
                <Grid Margin="0,16" RowSpacing="8">
                    <!--  Filtres ici  -->
                    <Button
                        BackgroundColor="Transparent"
                        Command="{Binding ResetFilterCommand}"
                        Text="RÃ©initialiser"
                        TextColor="#006994" />
                    <Button
                        BackgroundColor="#006994"
                        Command="{Binding ApplyFilterCommand}"
                        IsEnabled="{Binding CanApplyFilter}"
                        Text="Appliquer"
                        TextColor="White" />
                </Grid>
            </StackLayout>
            <Grid.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnPanUpdated" />
            </Grid.GestureRecognizers>
        </Grid>

        <!--  Add Spot Button  -->
        <Button
            Margin="16"
            BackgroundColor="#006994"
            Command="{Binding AddSpotCommand}"
            CornerRadius="28"
            FontSize="24"
            HeightRequest="56"
            HorizontalOptions="End"
            Text="+"
            TextColor="White"
            VerticalOptions="End"
            WidthRequest="56" />
    </Grid>
</ContentPage>